<?xml version='1.0' encoding='UTF-8'?>
<Configuration status="WARN">

	<Appenders>

		<Console name="Console" target="SYSTEM_OUT">

			<!--
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
			-->

			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} %-24t %-5p %c{1}: %m%n"/>

        </Console>

	</Appenders>

	<Loggers>

		<Root level="info">
			<AppenderRef ref="Console"/>
		</Root>

		<Logger
			name="org.hibernate"
			level="warn"
			additivity="false"/>

		<Logger
			name="wbs.smsapps.forwarder.daemon.ForwarderDaemon"
			level="error"
			additivity="false"/>

	</Loggers>

</Configuration>