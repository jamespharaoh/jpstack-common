<record
	name="shnSupplier"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="database"
			type="shnDatabase"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="publicName"
			nullable="yes"/>

		<!-- contact settings -->

		<string-field
			name="contactName"
			nullable="yes"/>

		<string-field
			name="contactAddress"
			nullable="yes"/>

		<string-field
			name="contactPhone"
			nullable="yes"/>

		<reference-field
			name="contactNotes"
			type="text"
			nullable="yes"/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a Shopping Nation supplier"
			template="yes"/>

		<priv-type
			name="View"
			description="View a Shopping Nation supplier"
			template="yes"/>

	</priv-types>

</record>