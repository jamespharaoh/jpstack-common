<console-module
	name="shn-shopify-connection">

	<console-helper-provider
		object-name="shnShopifyConnection">

		<priv-key
			name="shnShopifyConnection.manage"
			priv="manage"/>

		<context-stuff
			name="shnShopifyConnectionName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="shnShopifyConnection"
		object-name="shnShopifyConnection">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-shopify-connection"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-shopify-connection"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-shopify-connection"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="database"
					object-type="shnDatabase"/>

				<object-field
					name="store"
					object-type="shnShopifyStore"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-shopify-connection"
			type="update">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="database"
					object-type="shnDatabase"/>

				<object-field
					name="store"
					object-type="shnShopifyStore"/>

			</columns>

		</form>

	</forms>

</console-module>
