<console-module
	name="shn-shopify-store">

	<console-helper-provider
		object-name="shnShopifyStore">

		<priv-key
			name="shnShopifyStore.manage"
			priv="manage"/>

		<context-stuff
			name="shnShopifyStoreName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="shnShopifyStore"
		object-name="shnShopifyStore">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-shopify-store"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-shopify-store"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-shopify-store"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="storeName"/>

				<text-field
					name="privateAppName"/>

				<text-field
					name="apiKey"/>

				<text-field
					name="password"/>

				<text-field
					name="sharedSecret"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-shopify-store"
			type="update">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="storeName"
					nullable="yes"/>

				<text-field
					name="privateAppName"
					nullable="yes"/>

				<text-field
					name="apiKey"
					nullable="yes"/>

				<text-field
					name="password"
					nullable="yes"/>

				<text-field
					name="sharedSecret"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
