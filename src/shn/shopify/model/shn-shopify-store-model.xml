<model-meta
	name="shnShopifyStore"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>
		<description-field/>
		<deleted-field/>

		<!-- settings -->

		<string-field
			name="storeName"
			nullable="yes"/>

		<string-field
			name="privateAppName"
			nullable="yes"/>

		<string-field
			name="apiKey"
			nullable="yes"/>

		<string-field
			name="password"
			nullable="yes"/>

		<string-field
			name="sharedSecret"
			nullable="yes"/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a shopify store"
			template="yes"/>

		<priv-type
			name="View"
			description="View a shopify store"
			template="yes"/>

		<priv-type
			subject="slice"
			name="Shopify store create"
			description="Create new shopify store in a slice"
			template="yes"/>

	</priv-types>

</model-meta>