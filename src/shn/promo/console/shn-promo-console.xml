<console-module
	name="shn-promo">

	<console-helper-provider
		object-name="shnPromo"
		view-priv="type.database:view"
		create-priv="database:admin">

		<priv-key
			name="shnPromo.manage"
			priv="type.database:admin"/>

		<context-stuff
			name="shnPromoName"
			field="code"/>

		<context-stuff
			name="shnPromoTypeId"
			field="type.database.id"/>

		<run-post-processor
			name="shnPromoType"/>

	</console-helper-provider>

	<object-context
		name="shnPromo"
		object-name="shnPromo">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<context-link
				name="item"
				link="shnPromoItem"
				label="Items"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-promo"
			type="read-only">

			<columns>

				<parent-field root="type.database"/>
				<code-field/>
				<description-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-promo"
			type="create">

			<columns>

				<parent-field root="type.database"/>
				<code-field/>
				<description-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-promo"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field root="type.database"/>
				<code-field/>
				<description-field/>
				<deleted-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-promo"
			type="update">

			<columns>

				<code-field pattern="[A-Z]+"/>
				<description-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

			</columns>

		</form>

	</forms>

</console-module>
