<console-module
	name="shn-promo-item">

	<console-helper-provider
		object-name="shnPromoItem"
		view-priv="promo.type.database:view"
		create-priv="type.database:admin">

		<priv-key
			name="shnPromoItem.manage"
			priv="promo.type.database:admin"/>

		<context-stuff
			name="shnPromoItemName"
			field="index"/>

		<context-stuff
			name="shnPromoId"
			field="promo.id"/>

		<run-post-processor
			name="shnPromo"/>

	</console-helper-provider>

	<object-context
		name="shnPromoItem"
		object-name="shnPromoItem">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-promo-item"
			type="read-only">

			<columns>

				<index-field/>

				<object-field
					name="productVariant"
					object-type="shnProductVariant"
					root-field="promo.type.database"/>

				<currency-field
					name="normalPrice"
					field="productVariant.shoppingNationPrice"
					currency="promo.type.database.currency"/>

				<currency-field
					name="costPrice"
					field="productVariant.costPrice"
					currency="promo.type.database.currency"/>

				<currency-field
					name="promoPrice"
					currency="promo.type.database.currency"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-promo-item"
			type="create">

			<columns>

				<object-field
					name="productVariant"
					object-type="shnProduct"
					root-field="promo.type.database"/>

				<currency-field
					name="promoPrice"
					currency="promo.type.database.currency"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-promo-item"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field root="promo.type.database"/>
				<index-field/>
				<deleted-field/>

				<object-field
					name="productVariant"
					object-type="shnProduct"
					root-field="promo.type.database"/>

				<currency-field
					name="promoPrice"
					currency="promo.type.database.currency"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-promo-item"
			type="update">

			<columns>

				<object-field
					name="productVariant"
					object-type="shnProduct"
					root-field="promo.type.database"/>

				<currency-field
					name="promoPrice"
					currency="promo.type.database.currency"/>

			</columns>

		</form>

	</forms>

</console-module>
