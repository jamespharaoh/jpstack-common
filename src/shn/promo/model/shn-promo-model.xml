<model-meta
	name="shnPromo"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="type"
			type="shnPromoType"/>

		<code-field/>

		<!-- details -->

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<timestamp-field
			name="startTime"
			column-type="postgresql"/>

		<timestamp-field
			name="endTime"
			column-type="postgresql"/>

		<!-- statistics -->

		<integer-field
			name="numItems"
			default="0"/>

		<integer-field
			name="numItemsNotDeleted"
			default="0"/>

	</fields>

	<collections>

		<children-list
			name="items"
			type="shnPromoItem"
			join-column="promo_id"/>

	</collections>

</model-meta>