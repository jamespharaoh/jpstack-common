<console-module
	name="shn-database">

	<console-helper-provider
		object-name="shnDatabase">

		<priv-key
			name="shnDatabase.manage"
			priv="manage"/>

		<context-stuff
			name="shnDatabaseName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="shnDatabase"
		object-name="shnDatabase">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				target-responder="shnDatabaseSettingsGeneralResponder"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<section
				name="product"
				label="Products">

				<context-link
					name="product"
					link="shnProduct"
					label="Products"/>

				<context-link
					name="productVariant"
					link="shnProductVariantSearch"
					label="Variants"/>

				<context-link
					name="category"
					link="shnProductCategory"
					label="Categories"/>

				<context-link
					name="supplier"
					link="shnSupplier"
					label="Suppliers"/>

				<context-link
					name="variantType"
					link="shnProductVariantType"
					label="Variant types"/>

			</section>

			<section
				name="show"
				label="Shows">

				<context-link
					name="show"
					link="shnShow"
					label="Shows"/>

				<context-link
					name="type"
					link="shnShowType"
					label="Show types"/>

				<context-link
					name="presenter"
					link="shnShowPresenter"
					label="Presenters"/>

				<context-link
					name="guest"
					link="shnShowGuest"
					label="Guests"/>

			</section>

			<section
				name="promo"
				label="Promos">

				<context-link
					name="promo"
					link="shnPromo"
					label="Promos"/>

				<context-link
					name="type"
					link="shnPromoType"
					label="Promo types"/>

			</section>

			<section
				name="settings"
				label="Settings"
				priv-key="shnDatabase.manage">

				<object-settings-page
					short-name="general"
					form="settings"/>

				<object-events-page/>

			</section>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-database"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-database"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-database"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="currency"
					object-type="currency"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-database"
			type="update">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="currency"
					object-type="currency"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
