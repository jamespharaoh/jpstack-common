<console-module
	name="shn-database">

	<console-helper-provider
		object-name="shnDatabase">

		<priv-key
			name="shnDatabase.manage"
			priv="manage"/>

		<context-stuff
			name="shnDatabaseName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="shnDatabase"
		object-name="shnDatabase">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				target-responder="shnDatabaseSettingsGeneralResponder"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<section
				name="settings"
				label="Settings">

				<object-settings-page
					short-name="general"
					form="settings"/>

				<context-link
					name="productCategory"
					link="shnProductCategory"
					label="Product categories"/>

				<context-link
					name="supplier"
					link="shnSupplier"
					label="Suppliers"/>

			</section>

			<context-link
				name="product"
				link="shnProduct"
				label="Products"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-database"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-database"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-database"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="currency"
					object-type="currency"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-database"
			type="update">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="currency"
					object-type="currency"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
