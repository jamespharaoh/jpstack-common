<console-module
	name="shn-product-sub-category">

	<console-helper-provider
		object-name="shnProductSubCategory"
		view-priv="database:view"
		create-priv="database:admin">

		<priv-key
			name="shnProductSubCategory.manage"
			priv="database:admin"/>

		<context-stuff
			name="shnProductSubCategoryName"
			field="code"/>

		<context-stuff
			name="shnProductCategoryId"
			field="category.id"/>

		<run-post-processor
			name="shnProductCategory"/>

	</console-helper-provider>

	<object-context
		name="shnProductSubCategory"
		object-name="shnProductSubCategory">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-product-sub-category"
			type="read-only">

			<columns>

				<code-field/>
				<description-field/>

				<text-field
					name="publicTitle"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-product-sub-category"
			type="create">

			<columns>

				<code-field pattern="[A-Z]+"/>
				<description-field/>

				<yes-no-field
					name="active"/>

				<text-field
					name="publicTitle"
					nullable="yes"/>

				<text-area-field
					name="publicDescription"
					nullable="yes"/>

				<image-field
					name="publicImage"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-product-sub-category"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field root="database"/>
				<code-field/>
				<description-field/>
				<deleted-field/>

				<yes-no-field
					name="active"/>

				<text-field
					name="publicTitle"/>

				<text-area-field
					name="publicDescription"/>

				<image-field
					name="publicImage"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-product-sub-category"
			type="update">

			<columns>

				<code-field pattern="[A-Z]+"/>
				<description-field/>
				<deleted-field/>

				<yes-no-field
					name="active"/>

				<text-field
					name="publicTitle"
					nullable="yes"/>

				<text-area-field
					name="publicDescription"
					nullable="yes"/>

				<image-field
					name="publicImage"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
