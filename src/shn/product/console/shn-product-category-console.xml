<console-module
	name="shn-product-category">

	<console-helper-provider
		object-name="shnProductCategory"
		view-priv="database:view">

		<priv-key
			name="shnProductCategory.manage"
			priv="database:admin"/>

		<context-stuff
			name="shnProductCategoryName"
			field="code"/>

		<context-stuff
			name="shnDatabaseId"
			field="database.id"/>

		<run-post-processor
			name="shnDatabase"/>

	</console-helper-provider>

	<object-context
		name="shnProductCategory"
		object-name="shnProductCategory">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<context-link
				name="subCategory"
				link="shnProductSubCategory"
				label="Sub categories"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-product-category"
			type="read-only">

			<columns>

				<code-field/>
				<description-field/>

				<text-field
					name="publicTitle"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-product-category"
			type="create">

			<columns>

				<code-field pattern="[A-Z]+"/>
				<description-field/>

				<text-field
					name="publicTitle"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-product-category"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="publicTitle"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-product-category"
			type="update">

			<columns>

				<code-field pattern="[A-Z]+"/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="publicTitle"/>

			</columns>

		</form>

	</forms>

</console-module>
