<console-module
	name="shn-product-variant">

	<console-helper-provider
		object-name="shnProductVariant"
		view-priv="product.subCategory.category.database:view"
		create-priv="subCategory.category.database:admin">

		<priv-key
			name="shnProductVariant.manage"
			priv="product.subCategory.category.database:admin"/>

		<context-stuff
			name="shnProductVariantName"
			field="itemNumber"/>

		<context-stuff
			name="shnProductId"
			field="product.id"/>

		<run-post-processor
			name="shnProduct"/>

	</console-helper-provider>

	<object-context
		name="shnProductVariant"
		object-name="shnProductVariant">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-product-variant"
			type="read-only">

			<columns>

				<code-field pattern="[1-9][0-9]{5}[A-Z]*"/>
				<description-field/>

				<text-field
					name="publicTitle"/>

				<yes-no-field
					name="active"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-product-variant"
			type="create">

			<columns>

				<code-field pattern="[1-9][0-9]{5}[A-Z]*"/>
				<description-field/>

				<text-field
					name="publicTitle"/>

				<yes-no-field
					name="active"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-product-variant"
			type="read-only"
			fields-provider="shnProductVariantSummaryFieldsProvider">

			<columns>

				<id-field/>
				<parent-field root="product.subCategory.category.database"/>
				<code-field pattern="[1-9][0-9]{5}[A-Z]*"/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="publicTitle"/>

				<yes-no-field
					name="active"/>

				<text-field
					name="supplierReference"/>

				<!-- pricing -->

				<currency-field
					name="recommendedRetailPrice"
					currency="product.subCategory.category.database.currency"/>

				<currency-field
					name="shoppingNationPrice"
					currency="product.subCategory.category.database.currency"/>

				<currency-field
					name="promotionalPrice"
					currency="product.subCategory.category.database.currency"/>

				<currency-field
					name="costPrice"
					currency="product.subCategory.category.database.currency"/>

				<currency-field
					name="postageAndPackaging"
					currency="product.subCategory.category.database.currency"/>

				<!-- inventory -->

				<integer-field
					name="stockQuantity"/>

				<!-- statistics -->

				<integer-field
					name="soldQuantity"/>

				<currency-field
					name="salesRetail"
					currency="product.subCategory.category.database.currency"/>

				<currency-field
					name="salesCost"
					currency="product.subCategory.category.database.currency"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-product-variant"
			type="update"
			fields-provider="shnProductVariantSettingsFieldsProvider">

			<columns>

				<code-field pattern="[1-9][0-9]{5}[A-Z]*"/>
				<description-field/>
				<deleted-field/>

				<!-- settings -->

				<text-field
					name="publicTitle"
					nullable="yes"/>

				<yes-no-field
					name="active"/>

				<text-field
					name="supplierReference"
					nullable="yes"/>

				<!-- pricing -->

				<currency-field
					name="recommendedRetailPrice"
					currency="product.subCategory.category.database.currency"
					nullable="yes"/>

				<currency-field
					name="shoppingNationPrice"
					currency="product.subCategory.category.database.currency"
					nullable="yes"/>

				<currency-field
					name="promotionalPrice"
					currency="product.subCategory.category.database.currency"
					nullable="yes"/>

				<currency-field
					name="costPrice"
					currency="product.subCategory.category.database.currency"
					nullable="yes"/>

				<currency-field
					name="postageAndPackaging"
					currency="product.subCategory.category.database.currency"
					nullable="yes"/>

				<!-- inventory -->

				<integer-field
					name="stockQuantity"/>

			</columns>

		</form>

	</forms>

</console-module>
