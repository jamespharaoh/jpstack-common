<console-module
	name="shn-product">

	<console-helper-provider
		object-name="shnProduct"
		view-priv="database:view"
		create-priv="admin">

		<priv-key
			name="shnProduct.manage"
			priv="database:admin"/>

		<context-stuff
			name="shnProductName"
			field="itemNumber"/>

		<context-stuff
			name="shnDatabaseId"
			field="database.id"/>

		<run-post-processor
			name="shnDatabase"/>

	</console-helper-provider>

	<object-context
		name="shnProduct"
		object-name="shnProduct">

		<list>

			<object-search-page
				search-class="shn.product.model.ShnProductSearch"
				search-form="search"
				results-form="results"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<context-link
				name="variant"
				link="shnProductVariant"
				label="Variants"/>

			<context-link
				name="image"
				link="shnProductImage"
				label="Images"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="search"
			class="shn.product.model.ShnProductSearch"
			type="search">

			<columns>

				<object-field
					name="productCategoryId"
					object-type="shnProductCategory"
					root-field="database"
					nullable="yes"/>

				<object-field
					name="productSubCategoryId"
					object-type="shnProductSubCategory"
					root-field="database"
					nullable="yes"/>

				<text-field
					name="itemNumber"
					nullable="yes"/>

				<text-field
					name="description"
					nullable="yes"/>

				<yes-no-field
					name="deleted"
					nullable="yes"
					default="no"/>

				<yes-no-field
					name="active"
					nullable="yes"/>

				<text-field
					name="publicTitle"
					nullable="yes"/>

				<text-field
					name="publicDescription"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="results"
			object-type="shn-product"
			type="read-only">

			<columns>

				<text-field
					name="category"
					field="subCategory.category.code"
					label="Category"/>

				<text-field
					name="subCategory"
					field="subCategory.code"
					label="Sub category"/>

				<code-field/>
				<description-field/>

				<text-field
					name="publicTitle"/>

				<text-field
					name="supplier"
					field="supplier.name"/>

				<yes-no-field
					name="active"/>

				<image-field
					name="primaryImage"
					field="primaryImage.originalMedia"
					show-filename="no"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-product"
			type="create">

			<columns>

				<code-field pattern="[1-9][0-9]{5}"/>
				<description-field/>

				<object-field
					name="subCategory"
					object-type="shnProductSubCategory"/>

				<text-field
					name="publicTitle"/>

				<text-area-field
					name="publicDescription"/>

				<text-area-field
					name="publicContents"/>

				<object-field
					name="supplier"
					object-type="shnSupplier"/>

				<yes-no-field
					name="active"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-product"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<description-field/>
				<deleted-field/>

				<!-- settings -->

				<object-field
					name="subCategory"
					object-type="shnProductSubCategory"/>

				<text-field
					name="publicTitle"/>

				<text-area-field
					name="publicDescription"/>

				<text-area-field
					name="publicContents"/>

				<object-field
					name="supplier"
					object-type="shnSupplier"/>

				<yes-no-field
					name="active"/>

				<image-field
					name="primaryImage"/>

				<!-- statistics -->

				<integer-field
					name="soldQuantity"/>

				<currency-field
					name="salesRetail"
					currency="subCategory.category.database.currency"/>

				<currency-field
					name="salesCost"
					currency="subCategory.category.database.currency"/>

				<timestamp-field
					name="dateFirstAired"/>

				<timestamp-field
					name="dateLastAired"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-product"
			type="update">

			<columns>

				<parent-field/>
				<code-field pattern="[1-9][0-9]{5}"/>
				<description-field/>
				<deleted-field/>

				<!-- settings -->

				<object-field
					name="subCategory"
					object-type="shnProductSubCategory"/>

				<text-field
					name="publicTitle"
					nullable="yes"/>

				<text-area-field
					name="publicDescription"
					nullable="yes"/>

				<text-area-field
					name="publicContents"
					nullable="yes"/>

				<object-field
					name="supplier"
					object-type="shnSupplier"
					nullable="yes"/>

				<yes-no-field
					name="active"/>

			</columns>

		</form>

	</forms>

</console-module>
