<record
	name="shnProductVariantType"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="database"
			type="shnDatabase"/>

		<code-field/>

		<!-- details -->

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="publicTitle"
			nullable="yes"/>

	</fields>

	<collections>

		<children-collection
			name="values"
			type="shnProductVariantValue"
			join-column="type_id"/>

	</collections>

</record>