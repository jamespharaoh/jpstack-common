<record
	name="shnProductSubCategory"
	type="minor">

	<record-interfaces>

		<interface
			package="shn.shopify.model"
			name="ShnShopifyRecord">

			<parameter value="shn.product.model.ShnProductSubCategoryRec"/>

		</interface>

	</record-interfaces>

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="category"
			type="shnProductCategory"/>

		<code-field/>

		<!-- details -->

		<description-field/>
		<deleted-field/>
		<active-field/>

		<!-- cached data -->

		<reference-field
			name="database"
			type="shnDatabase"/>

		<!-- settings -->

		<string-field
			name="publicTitle"
			nullable="yes"/>

		<reference-field
			name="publicDescription"
			type="text"
			nullable="yes"/>

		<reference-field
			name="publicImage"
			type="media"
			nullable="yes"/>

		<!-- shopify data -->

		<yes-no-field
			name="shopifyNeedsSync"
			default="yes"/>

		<integer-field
			name="shopifyId"
			nullable="yes"/>

		<timestamp-field
			name="shopifyCreatedAt"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="shopifyUpdatedAt"
			column-type="postgresql"
			nullable="yes"/>

	</fields>

	<event-types>

		<event-type
			name="Shopping Nation sub category created in Shopify"
			text="%0 created in %1 via %2"
			admin="no"/>

		<event-type
			name="Shopping Nation sub category updated in Shopify"
			text="%0 updated in %1 via %2"
			admin="no"/>

		<event-type
			name="Shopping Nation sub category removed in Shopify"
			text="Shopify sub category %0 removed in %1 via %2"
			admin="no"/>

	</event-types>

</record>