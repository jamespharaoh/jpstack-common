<model-meta
	name="shnProduct"
	type="common">

	<implements-interfaces>

		<implements-interface
			package="shn.shopify.model"
			name="ShnShopifyRecord">

			<parameter value="ShnProductRec"/>

		</implements-interface>

	</implements-interfaces>

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="database"
			type="shnDatabase"/>

		<code-field
			name="itemNumber"/>

		<!-- details -->

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<reference-field
			name="subCategory"
			type="shnProductSubCategory"/>

		<string-field
			name="publicTitle"
			nullable="yes"/>

		<reference-field
			name="publicDescription"
			type="text"
			nullable="yes"/>

		<reference-field
			name="publicContents"
			type="text"
			nullable="yes"/>

		<reference-field
			name="supplier"
			type="shnSupplier"
			nullable="yes"/>

		<yes-no-field
			name="active"
			default="no"/>

		<!-- statistics -->

		<timestamp-field
			name="createTime"
			column-type="postgresql"/>

		<timestamp-field
			name="updateTime"
			column-type="postgresql"/>

		<integer-field
			name="soldQuantity"
			default="0"/>

		<integer-field
			name="salesRetail"
			default="0"/>

		<integer-field
			name="salesCost"
			default="0"/>

		<timestamp-field
			name="dateFirstAired"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="dateLastAired"
			column-type="postgresql"
			nullable="yes"/>

		<integer-field
			name="numImages"
			default="0"/>

		<integer-field
			name="numImagesNotDeleted"
			default="0"/>

		<reference-field
			name="primaryImage"
			type="shnProductImage"
			nullable="yes"/>

		<!-- shopify data -->

		<yes-no-field
			name="shopifyNeedsSync"
			default="yes"/>

		<integer-field
			name="shopifyId"
			nullable="yes"/>

		<timestamp-field
			name="shopifyUpdatedAt"
			column-type="postgresql"
			nullable="yes"/>

		<!-- shopify sub category data -->

		<yes-no-field
			name="shopifySubCategoryCollectNeedsSync"
			default="yes"/>

		<integer-field
			name="shopifySubCategoryCollectId"
			nullable="yes"/>

		<timestamp-field
			name="shopifySubCategoryCollectCreatedAt"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="shopifySubCategoryCollectUpdatedAt"
			column-type="postgresql"
			nullable="yes"/>

	</fields>

	<collections>

		<children-collection
			name="variants"
			type="shnProductVariant"
			join-column="product_id"
			order-sql="item_number"/>

		<children-collection
			name="variantsNotDeleted"
			type="shnProductVariant"
			join-column="product_id"
			where-sql="not deleted"
			order-sql="item_number"/>

		<children-list
			name="images"
			type="shnProductImage"
			join-column="product_id"/>

		<children-list
			name="imagesNotDeleted"
			type="shnProductImage"
			join-column="product_id"
			where-sql="not deleted"/>

	</collections>

	<event-types>

		<event-type
			name="Shopping Nation product created in Shopify"
			text="%0 created in %1 via %2"
			admin="no"/>

		<event-type
			name="Shopping Nation product updated in Shopify"
			text="%0 updated in %1 via %2"
			admin="no"/>

		<event-type
			name="Shopping Nation product removed in Shopify"
			text="Shopify product %0 removed in %1 via %2"
			admin="no"/>

		<event-type
			name="Shopping Nation product sub category created in Shopify"
			text="%0 created in %1 via %2"
			admin="no"/>

		<event-type
			name="Shopping Nation product sub category updated in Shopify"
			text="%0 updated in %1 via %2"
			admin="no"/>

		<event-type
			name="Shopping Nation product sub category removed in Shopify"
			text="Shopify product sub category %0 removed in %1 via %2"
			admin="no"/>

	</event-types>

</model-meta>