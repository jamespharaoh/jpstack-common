<model-meta
	name="shnProduct"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="subCategory"
			type="shnProductSubCategory"/>

		<code-field
			name="itemNumber"/>

		<!-- details -->

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="publicTitle"
			nullable="yes"/>

		<reference-field
			name="publicDescription"
			type="text"
			nullable="yes"/>

		<reference-field
			name="supplier"
			type="shnSupplier"
			nullable="yes"/>

		<yes-no-field
			name="active"
			default="no"/>

		<!-- statistics -->

		<integer-field
			name="soldQuantity"
			default="0"/>

		<integer-field
			name="salesRetail"
			default="0"/>

		<integer-field
			name="salesCost"
			default="0"/>

		<timestamp-field
			name="dateFirstAired"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="dateLastAired"
			column-type="postgresql"
			nullable="yes"/>

		<!-- shopify data -->

		<integer-field
			name="shopifyId"
			nullable="yes"/>

		<timestamp-field
			name="shopifyUpdatedAt"
			column-type="postgresql"
			nullable="yes"/>

	</fields>

	<collections>

		<associative-list
			name="variantTypes"
			type="shnProductVariantType"
			table="shn_product_variant_type_link"
			join-column="product_id"
			value-column="variant_type_id"/>

		<children-collection
			name="variants"
			type="shnProductVariant"
			join-column="product_id"/>

	</collections>

</model-meta>