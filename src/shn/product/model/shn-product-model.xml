<model-meta
	name="shnProduct"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="database"
			type="shnDatabase"/>

		<code-field
			name="itemNumber"/>

		<!-- details -->

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<reference-field
			name="subCategory"
			type="shnProductSubCategory"/>

		<string-field
			name="publicTitle"
			nullable="yes"/>

		<reference-field
			name="publicDescription"
			type="text"
			nullable="yes"/>

		<reference-field
			name="supplier"
			type="shnSupplier"
			nullable="yes"/>

		<yes-no-field
			name="active"
			default="no"/>

		<!-- statistics -->

		<timestamp-field
			name="createTime"
			column-type="postgresql"/>

		<timestamp-field
			name="updateTime"
			column-type="postgresql"/>

		<integer-field
			name="soldQuantity"
			default="0"/>

		<integer-field
			name="salesRetail"
			default="0"/>

		<integer-field
			name="salesCost"
			default="0"/>

		<timestamp-field
			name="dateFirstAired"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="dateLastAired"
			column-type="postgresql"
			nullable="yes"/>

		<integer-field
			name="numImages"
			default="0"/>

		<integer-field
			name="numImagesNotDeleted"
			default="0"/>

		<reference-field
			name="primaryImage"
			type="shnProductImage"
			nullable="yes"/>

		<!-- shopify data -->

		<yes-no-field
			name="shopifyNeedsSync"/>

		<integer-field
			name="shopifyId"
			nullable="yes"/>

		<timestamp-field
			name="shopifyUpdatedAt"
			column-type="postgresql"
			nullable="yes"/>

	</fields>

	<collections>

		<children-collection
			name="variants"
			type="shnProductVariant"
			join-column="product_id"/>

		<children-list
			name="images"
			type="shnProductImage"
			join-column="product_id"/>

	</collections>

</model-meta>