<model-meta
	name="shnProductVariant"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="product"
			type="shnProduct"/>

		<code-field
			name="itemNumber"/>

		<!-- details -->

		<description-field/>

		<deleted-field/>

		<!-- cached data -->

		<reference-field
			name="database"
			type="shnDatabase"/>

		<!-- settings -->

		<string-field
			name="publicTitle"
			nullable="yes"/>

		<string-field
			name="supplierReference"
			nullable="yes"/>

		<reference-field
			name="image"
			type="shnProductImage"
			nullable="yes"/>

		<yes-no-field
			name="active"
			default="no"/>

		<!-- pricing -->

		<integer-field
			name="recommendedRetailPrice"
			nullable="yes"/>

		<integer-field
			name="shoppingNationPrice"
			nullable="yes"/>

		<integer-field
			name="promotionalPrice"
			nullable="yes"/>

		<integer-field
			name="costPrice"
			nullable="yes"/>

		<integer-field
			name="postageAndPackaging"
			nullable="yes"/>

		<!-- inventory -->

		<integer-field
			name="stockQuantity"
			default="0"/>

		<!-- statistics -->

		<integer-field
			name="soldQuantity"
			default="0"/>

		<integer-field
			name="salesRetail"
			default="0"/>

		<integer-field
			name="salesCost"
			default="0"/>

		<!-- shopify data -->

		<integer-field
			name="shopifyId"
			nullable="yes"/>

		<timestamp-field
			name="shopifyCreatedAt"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="shopifyUpdatedAt"
			column-type="postgresql"
			nullable="yes"/>

	</fields>

	<collections>

		<associative-collection
			name="variantValues"
			type="shnProductVariantValue"
			table="shn_product_variant_has_variant_value"
			join-column="product_variant_id"
			foreign-column="variant_value_id"
			owned="yes"/>

	</collections>

</model-meta>