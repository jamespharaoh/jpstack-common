<model-meta
	name="shnProductSubCategory"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="category"
			type="shnProductCategory"/>

		<code-field/>

		<!-- details -->

		<description-field/>

		<deleted-field/>

		<!-- cached data -->

		<reference-field
			name="database"
			type="shnDatabase"/>

		<!-- settings -->

		<yes-no-field
			name="active"/>

		<string-field
			name="publicTitle"
			nullable="yes"/>

		<reference-field
			name="publicDescription"
			type="text"
			nullable="yes"/>

		<reference-field
			name="publicImage"
			type="media"
			nullable="yes"/>

	</fields>

</model-meta>