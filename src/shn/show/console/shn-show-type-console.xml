<console-module
	name="shn-show-type">

	<console-helper-provider
		object-name="shnShowType"
		view-priv="database:view">

		<priv-key
			name="shnShowType.manage"
			priv="database:manage"/>

		<context-stuff
			name="shnShowTypeName"
			field="code"/>

		<context-stuff
			name="shnDatabaseId"
			field="database.id"/>

		<run-post-processor
			name="shnDatabase"/>

	</console-helper-provider>

	<object-context
		name="shnShowType"
		object-name="shnShowType">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-show-type"
			type="read-only">

			<columns>

				<code-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-show-type"
			type="create">

			<columns>

				<code-field pattern="[A-Z]+"/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-show-type"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<description-field/>
				<deleted-field/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-show-type"
			type="update">

			<columns>

				<code-field pattern="[A-Z]+"/>
				<description-field/>
				<deleted-field/>

			</columns>

		</form>

	</forms>

</console-module>
