<console-module
	name="shn-show">

	<console-helper-provider
		object-name="shnShow"
		view-priv="type.database:view"
		create-priv="database:admin">

		<priv-key
			name="shnShow.manage"
			priv="type.database:admin"/>

		<context-stuff
			name="shnShowName"
			field="code"/>

		<context-stuff
			name="shnShowTypeId"
			field="type.id"/>

		<run-post-processor
			name="shnShowType"/>

	</console-helper-provider>

	<object-context
		name="shnShow"
		object-name="shnShow">

		<list>

			<object-search-page
				search-class="shn.show.model.ShnShowSearch"
				search-form="search"
				results-form="results"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<context-link
				name="item"
				link="shnShowItem"
				label="Items"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="search"
			class="shn.show.model.ShnShowSearch"
			type="search">

			<columns>

				<object-field
					name="showTypeId"
					object-type="shnShowType"
					root-field="type.database"
					nullable="yes"/>

				<text-field
					name="description"
					nullable="yes"/>

				<yes-no-field
					name="deleted"
					nullable="yes"
					default="no"/>

				<interval-field
					name="startTime"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="results"
			object-type="shn-show"
			type="read-only">

			<columns>

				<parent-field root="type.database"/>
				<code-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-show"
			type="create">

			<columns>

				<parent-field root="type.database"/>
				<code-field/>
				<description-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-show"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field root="type.database"/>
				<code-field/>
				<description-field/>
				<deleted-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-show"
			type="update">

			<columns>

				<parent-field root="type.database"/>
				<code-field/>
				<description-field/>
				<deleted-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

			</columns>

		</form>

	</forms>

</console-module>
