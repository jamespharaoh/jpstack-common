<console-module
	name="shn-show-item">

	<console-helper-provider
		object-name="shnShowItem"
		view-priv="show.type.database:view"
		create-priv="type.database:admin">

		<priv-key
			name="shnShowItem.manage"
			priv="show.type.database:admin"/>

		<context-stuff
			name="shnShowItemName"
			field="index"/>

		<context-stuff
			name="shnShowId"
			field="show.id"/>

		<run-post-processor
			name="shnShow"/>

	</console-helper-provider>

	<object-context
		name="shnShowItem"
		object-name="shnShowItem">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="shn-show-item"
			type="read-only">

			<columns>

				<index-field/>

				<object-field
					name="product"
					object-type="shnProduct"
					root-field="show.type.database"/>

				<integer-field
					name="minutes"/>

				<text-field
					name="comments"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="shn-show-item"
			type="create">

			<columns>

				<object-field
					name="product"
					object-type="shnProduct"
					root-field="show.type.database"
					search="yes"/>

				<integer-field
					name="minutes"/>

				<text-field
					name="comments"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="shn-show-item"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field root="show.type.database"/>
				<index-field/>
				<deleted-field/>

				<object-field
					name="product"
					object-type="shnProduct"
					root-field="show.type.database"/>

				<integer-field
					name="minutes"/>

				<text-field
					name="comments"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="shn-show-item"
			type="update">

			<columns>

				<object-field
					name="product"
					object-type="shnProduct"
					root-field="show.type.database"
					search="yes"/>

				<integer-field
					name="minutes"/>

				<text-field
					name="comments"/>

			</columns>

		</form>

	</forms>

</console-module>
