<record
	name="shnShow"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="type"
			type="shnShowType"/>

		<code-field/>

		<!-- details -->

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<timestamp-field
			name="startTime"
			column-type="postgresql"/>

		<timestamp-field
			name="endTime"
			column-type="postgresql"/>

		<string-field
			name="planner"
			nullable="yes"/>

		<reference-field
			name="presenter"
			type="shnShowPresenter"
			nullable="yes"/>

		<reference-field
			name="guest"
			type="shnShowGuest"
			nullable="yes"/>

		<reference-field
			name="comments"
			type="text"
			nullable="yes"/>

		<!-- data -->

		<integer-field
			name="release"
			default="0"/>

		<yes-no-field
			name="draft"
			default="yes"/>

		<!-- statistics -->

		<integer-field
			name="numItems"
			default="0"/>

		<integer-field
			name="numItemsNotDeleted"
			default="0"/>

	</fields>

	<collections>

		<children-list
			name="items"
			type="shnShowItem"
			join-column="show_id"/>

	</collections>

</record>